{
  "name": "electron-template",
  "private": true,
  "version": "0.0.0",
  "description": "Electron template with React, TypeScript, and Tailwind CSS",
  "main": "./out/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build-with-tsc": "tsc -b && electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "rebuild:native": "electron-rebuild -f -w better-sqlite3,onnxruntime-node",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "ai:dev": "pnpm run dev",
    "ai:build": "pnpm run build && pnpm run package",
    "ai:clean": "rm -rf out node_modules && pnpm install",
    "test": "pnpm run test:main && pnpm run test:renderer",
    "test:main": "vitest --config vitest.config.main.ts",
    "test:renderer": "vitest --config vitest.config.renderer.ts",
    "test:coverage": "pnpm run test -- --coverage",
    "test:ui": "vitest --ui",
    "ai:test": "pnpm run typecheck && pnpm run lint && pnpm run test",
    "ai:setup": "pnpm install && pnpm run typecheck",
    "setup-guides": "bash scripts/setup-guides.sh",
    "setup-guides:private": "bash scripts/setup-guides.sh && bash scripts/setup-guides-private.sh",
    "update-guides": "bash scripts/update-guides.sh",
    "guides": "pnpm setup-guides"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "tailwind",
    "vite",
    "template"
  ],
  "author": "Manta Templates",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@eslint/js": "^9.33.0",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "colord": "^2.9.3",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "gray-matter": "^4.0.3",
    "jsdom": "^26.1.0",
    "react-hook-form": "^7.62.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-pretty-code": "^0.14.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-rehype": "^11.1.2",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "unist-util-visit": "^5.0.0",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/typography": "^0.5.16",
    "@types/react-router-dom": "^5.3.3",
    "@types/three": "^0.179.0",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "fast-glob": "^3.3.3",
    "framer-motion": "^12.23.12",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.507.0",
    "onnxruntime-node": "1.22.0-rev",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "sqlite-vec": "0.1.7-alpha.2",
    "tailwind-merge": "^3.3.1",
    "three": "^0.179.1",
    "tw-animate-css": "^1.3.7",
    "zod": "^4.1.5"
  },
  "build": {
    "appId": "com.rummage.app",
    "files": [
      "out/**",
      "resources/**"
    ],
    "asar": true,
    "asarUnpack": [
      "out/main/**/*.node",
      "node_modules/{better-sqlite3,sqlite-vec,onnxruntime-node}/**/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}